<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Update <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name..." value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Campground Price..." value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image URL..." value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" placeholder="Campground Description..."><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Update Campground</button>
                </div>
            </form>
            <a class="btn btn-danger btn-lg btn-block" href="/campgrounds/<%= campground._id %>">Cancel</a>
        </div>
        <br>
    </div>
</div>

<% include ../partials/footer %>