<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Comments Text..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Create Comments</button>
                </div>
            </form>
            <a class="btn btn-danger btn-lg btn-block" href="/campgrounds/<%= campground._id %>">Cancel</a>
        </div>
        <br>
    </div>
</div>

<% include ../partials/footer %>