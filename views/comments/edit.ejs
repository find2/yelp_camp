<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Update Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Comments Text..."><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Update Comments</button>
                </div>
            </form>
            <a class="btn btn-danger btn-lg btn-block" href="/campgrounds/<%= campground_id %>">Cancel</a>
        </div>
        <br>
    </div>
</div>

<% include ../partials/footer %>